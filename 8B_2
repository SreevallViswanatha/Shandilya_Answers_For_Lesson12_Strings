// Write a program in C to check whether a character is digit or not.
#include <stdio.h>
#include <stdlib.h>
int main()
{
    char c;
    printf("Enter a character:");
    scanf("%c", &c);
    if((c>=48)&&(c<=57))
        printf("The character is a digit.");
    else
        printf("The character is not a digit.");
}
