// Write a program in C to convert a string to lowercase.
#include <stdio.h>
#include <stdlib.h>
int main()
{
    char string[10000];
    int i;
    puts("Enter a string in UPPERCASE:");
    gets(string);
    for(i=0; string[i]!='\0'; i++)
    {
        if((string[i]>=65)&&(string[i]<=90))
        {
            string[i]+=32;
        }
    }
    puts(string);
}
