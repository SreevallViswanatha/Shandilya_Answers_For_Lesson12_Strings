// Write a program in C to Find the Frequency of Characters.
#include <stdio.h>
#include <stdlib.h>
int main()
{
    char string[10000], character;
    int i, frequency=0;
    puts("Enter a string:");
    gets(string);
    printf("Enter the character:");
    scanf("%c", &character);
    for(i=0; string[i]!='\0'; i++)
    {
        if(string[i]==character)
            frequency++;
    }
    printf("The number of times %c appears is:%d", character, frequency);
}
