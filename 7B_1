// Write a program in C to replace the spaces of a string with a specific character.
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
int main()
{
    char string[10000], c;
    int i;
    puts("Enter a string:");
    gets(string);
    printf("Enter a character:");
    scanf("%c", &c);
    for(i=0; string[i]!='\0'; i++)
    {
        if(string[i]==' ')
        {
            string[i]=c;
        }
    }
    puts(string);
}
